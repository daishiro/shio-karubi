<h1>Index#index</h1>
<p>Find me in app/views/index/index.html.erb</p>

<% unless session[:oauth] %>
  <a href="/oauth">塩カルビ好き？じゃ、押せ！！</a>
<% else %>
  <div id="friends_timeline">
    <dl>
      <% @tweets.each do |t| %>
      <dt><%= image_tag t.user.profile_image_url, size: '40x40' %></dt>
      <dd><%= t.user.name %></dd>
      <dd><%= t.text %></dd>
      <% end %>
    </dl>
  </div>
<% end %>

